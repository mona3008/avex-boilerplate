<section data-section-id="{{ section.id }}" class="hero" style="background-color: {{ section.settings.hero_bg }}; height: 80vh;">
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-10 hero_col">
				<div class="hero_text_wrapper">
					{% if section.settings.hero_title != '' %}
					<h1>{{ section.settings.hero_title | escape }}</h1>
					{% endif %}
					{% if section.settings.hero_sub != '' %}
					<h3>{{ section.settings.hero_sub | escape }}</h3>
					{% endif %}
					<div class="content" >{{ section.settings.hero_text }}</div>
					{% if section.settings.hero_btext != '' %}
					<a  class="primary-button" href="{{ section.settings.hero_burl }}">{{ section.settings.hero_btext }}</a>
					{% endif %}			
				</div>	
			</div>
		</div>
	</div>
</section>

{% schema %}
{
    "name": {
      "en": "Hero"
      },
      "class" : "hero-section",
      "settings": 
          [
              {
                  "type": "header",
                  "content": "Main Settings"
              },
              {
                  "type": "text",
                  "id": "hero_title",
                  "label": "Title"
              },
              {
                  "type": "text",
                  "id": "hero_sub",
                  "label": "Sub Title",
                  "default" : "Sample Title"
              },
              {
                  "type": "richtext",
                  "id": "hero_text",
                  "label": "Text",
                      "default" : "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore</p>"
                  },
              {
                  "type": "text",
                  "id": "hero_btext",
                  "label": "Button Text",
                  "default": "Learn more"			
              },
              {
                  "type": "url",
                  "id": "hero_burl",
                  "label": "Button Url"	
              },
              {
                  "type": "image_picker",
                  "id": "hero_img",
                  "label": "Image"			
              },
              {
                  "type": "color",
                  "id": "hero_bg",
                  "label": "BG Color",
                  "default": "#ccc"	
              }		
          ],
          "presets": [
              {
                  "name": "Hero",
                  "category": "Home Page"
              }
          ]
  }
{% endschema %}