<!-- Dynamic Yield Purchase -->
<script type="text/javascript">// <![CDATA[
if (typeof Shopify.Checkout.page !== 'undefined' && Shopify.Checkout.page == 'thank_you') {
    // Build the order cart
    var _dy_order_cart = [];

    for (var _index = 0; _index < Shopify.checkout.line_items.length; _index ++) {
        _dy_order_cart.push({
            productId: Shopify.checkout.line_items[_index].product_id.toString(),
            quantity: Shopify.checkout.line_items[_index].quantity,
            itemPrice: parseFloat(Shopify.checkout.line_items[_index].price),
        });
    }

    DY.API('event' , {
        name:'Purchase',
        properties: {
            dyType : 'purchase-v1',
            uniqueTransactionId: Shopify.checkout.order_id.toString(),
            value: parseFloat(Shopify.checkout.subtotal_price),
            currency: 'USD',
            cart: _dy_order_cart
        }
    });

    var _dy_fired_purchase = true;
}
// ]]>
</script>