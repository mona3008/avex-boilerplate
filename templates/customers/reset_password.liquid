<!-- /templates/customers/reset_password.liquid -->

{% form 'reset_customer_password' %}

{{ form.errors | default_errors }}

<input type="password" value="" name="customer[password]" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
<input type="password" value="" name="customer[password_confirmation]" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}">
<input type="submit" class="btn btn--full" value="Submit">
{% endform %}